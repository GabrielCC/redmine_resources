<h1>Listing departments</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @departments.each do |department| %>
  <tr>
    <td><%= department.name %></td>
    <td><%= link_to 'Show', department %></td>
    <td>
    <% if authorize_globally_for('departments', 'edit') %>
      <%= link_to 'Edit', edit_department_path(department) %>
    <% end %>
    </td>
    <td>
      <% if authorize_globally_for('departments', 'destroy') %>
        <%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />
<% if authorize_globally_for('departments', 'new') %>
  <%= link_to 'New Department', new_department_path %>
<% end %>